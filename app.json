{
  "expo": {
    "name": "myGrowth",
    "slug": "myGrowth",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./app/shared/assets/icon.png",
    "splash": {
      "image": "./app/shared/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./app/shared/assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.mygrowth"
    },
    "web": {
      "favicon": "./app/shared/assets/favicon.png"
    }
  },
  "packagerOpts": {
    "config": "metro.config.js",
    "sourceExts": [
      "expo.ts",
      "expo.tsx",
      "expo.js",
      "expo.jsx",
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "wasm",
      "svg"
    ]
  }
}
